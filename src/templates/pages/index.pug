extends ../base
include ../blocks/socials
include ../blocks/intro
block head
    title Авторизация
block variables
    -

        var buttonsList = [
            {
                href: './works.html',
                spec: 'works',
                text: 'Мои работы'
            },
            {
                href: './about.html',
                spec: 'about',
                text: 'Обо мне'
            },
            {
                href: './blog.html',
                spec: 'blog',
                text: 'Блог'
            }
        ];

block content
    section.section.main
        .main__auth
            a(href="#").btn-auth Авторизоваться
        .main__welcome
            .welcome
                .welcome__info
                    .welcome__about
                        +intro('welcome')
                    .welcome__socials
                        +socials('welcome')
                .welcome__buttons
                    ul.buttons
                        each item in buttonsList
                            li.buttons__item
                                a(href=`${item.href}`, class=`button button_${item.spec}`) #{item.text}
