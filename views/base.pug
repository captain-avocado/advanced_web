doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="styles/main.min.css")
        block head
    body
        #preloader.preloader.active
            img(src='images/bg-preloader.jpg').preloader__bg
            svg(width='150', height='150').preloader__svg#preloader__svg
                use(xlink:href='images/sprite.svg#preloader_round')
            .preloader__text#preloader__text 0%
        block variables
        block content